@model IEnumerable<SalesForceAPI.Models.YakInventory>


@{
    ViewBag.Title = "Index";
}

<h2>Force Kayaks Inventory</h2>
@if (User.IsInRole("admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qty)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.LocationId)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qty)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.LocationId)
                </td>*@
            <td>
                @if (User.IsInRole("admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })

                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })

                    if (item.Qty > 4)
                    { <a href="https://na30.salesforce.com/801/o" target="_blank" style="background-color:green" class="btn btn-primary btn-block">Order More</a> }
                    if (item.Qty >= 3 && item.Qty <= 4)
                    { <a href="https://na30.salesforce.com/801/o" target="_blank" style="background-color:orange" class="btn btn-primary btn-block">Order More!</a> }
                    if (item.Qty <= 2)
                    { <a href="https://na30.salesforce.com/801/o" target="_blank" style="background-color:red" class="btn btn-primary btn-block">Qty LOW! Order More!</a> }
                }
            </td>
        </tr>
    }

</table>
